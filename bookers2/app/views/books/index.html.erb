<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
    <div class="profile-container">
      <%= attachment_image_tag @user, :profile_image, :fill,100,100,format: 'jpeg',fallback:"no_image.jpg" %>
      <table class="table table-striped">
       <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
       </tbody>
      </table>
      <% if @user.id == current_user.id %>
        <a class="btn btn-outline-secondary btn-block" href="edit_user_path(@user)"><i class="fas fa-user-cog"></i></a>
      <% end %>
    </div>

    <h1>New book</h1>
    <%= form_with model: @book,local:true do |f| %>
      <h4>タイトル</h4>
      <%= f.text_field :title %>
      <h4>感想</h4>
      <%= f.text_field :body %>
      <%= f.submit 'Create book' %>
    <% end %>

   </div>
 </div>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <p>タイトル：<%= book.title %></p>
  <% end %>
  <p>説明：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>

