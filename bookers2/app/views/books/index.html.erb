<table class="table table-striped">

<h1>New book</h1>
<%= form_with model: @book,local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create book' %>
<% end %>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <p>タイトル：<%= book.title %></p>
  <% end %>
  <p>説明：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>
</table>
