<h2>User info</h2>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill,100,100,format: 'jpeg',fallback:"no_image.jpg" %>
  <h3 class="profile-name">name: <%= @user.name %></h3>
  <h3>introduction: <%= @user.introduction %></h3>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集",edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New book</h1>
<%= form_with model: @book,local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create book' %>
<% end %>

<h2>Books</h2>
<% @books.each do |book| %>
<div>
  <p><%= attachment_image_tag book.user, :profile_image, :fill,60,60,fallback:"no_image.jpg" %></p>
  <%= link_to book_path(book.id) do %>
    <p>タイトル：<%= book.title %></p>
  <% end %>
  <p>説明：<%= book.body %></p>
  <p>ユーザーネーム：<%= book.user.name %></p>
</div>
<% end %>
